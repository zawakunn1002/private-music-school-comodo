<div class="container">
	<div class="row">
		<div class="col-12">
			<div class="d-flex justify-content-center">
				<%= form_for @admin do |f| %>
					<div class="admin_form">
						<div class="form-group">
							<%= f.label :名前 %><br>
							<%= f.text_field :name %>
						</div>
						<div class="form-group">
							<%= f.label :Eメールアドレス %><br>
							<%= f.text_field :email %>
						</div>
						<%= f.submit "更新する" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>